{
  "name": "json-agents-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "JSON Agents monorepo - Universal JSON Specification for AI Agents",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:website": "turbo run build --filter=@json-agents/website",
    "dev": "turbo run dev",
    "dev:website": "turbo run dev --filter=@json-agents/website",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "deploy:pages": "npm run build:website && wrangler pages deploy apps/website/out --project-name=jsonagents"
  },
  "devDependencies": {
    "prettier": "^3.1.0",
    "turbo": "^2.3.3"
  },
  "packageManager": "npm@10.2.3",
  "engines": {
    "node": ">=18.0.0"
  }
}
